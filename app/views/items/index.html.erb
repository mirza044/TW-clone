<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse
      </h1>
    </div>
  </div>
</section>
<% end %>

<div class="row">
  <% @items.each do |item| %>
    <div class="col-sm-6">
    
      <div class="item-thumb">
      <%= link_to image_tag(item.image_url), item %>
      </div>
    


    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to item.title, item %></h3>

      <p class="has-text-gray fg pt1">Sold by <%= item.user.username %> </p>

      <p class="f3 fw6 has-text-right pt2 price"><%= (item.price) %> KM/kg</p>

      <% if item_author(item) %>
         <%= link_to 'Uredi', edit_item_path(item), class: "button is-small" %>
         <%= link_to 'Brisati', item, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      <% end %>
    
    </div>
  </div>

  <% end %>
</div>