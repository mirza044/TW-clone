<% content_for :body_class, 'bg-light' %>

<section class="section item-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @item.title %></h1>

      

      <div class="feature-image">
       <%= image_tag(@item.image_url) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @item.description %>

     
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= (@item.price) %> KM/kg</h4>
        <p class="has-text-centered mb4">Sold by <%= @item.user.username %></p>
        <%= button_to 'Add to cart', line_items_path(item_id: @item), class: 'button is-warning add-to-cart' %>
      </div>
    </div>
  </div>

  <% if item_author(@item) %>
    <%= link_to 'Edit', edit_item_path(@item), class: 'button' %>
  <% end %>
</section>