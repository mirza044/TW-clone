<h1>Lista tekstova</h1>
 
<%= link_to 'Novi tekst', new_article_path %>


<table>
  <tr>
    <th>Naziv</th>
    <th>Tekst</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>